nextflow_workflow {

    name "Test Subworkflow NICHECOMPASS"
    script "../main.nf"
    workflow "NICHECOMPASS"

    tag "subworkflows"
    tag "subworkflows_sangercellgeni"
    tag "subworkflows/nichecompass"
    tag "spatial/nichecompasstraining"
    tag "spatial/nichecompassanalysis"


    // TODO nf-core: Change the test name preferably indicating the test-data and file-format used
    test("nichecompass - mouse - 3") {

        when {
            params {
                spatial_nichecompasstraining_args = '--species mouse'
            }
            workflow {
                """
                input[0] = [
                    [ id:'test_20250830' ], // meta map
                    file(params.modules_testdata_base_path + 'nichecompass/training/100/*.h5ad', checkIfExists: true),
                ]
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success},
                { assert snapshot(workflow.out).match()}
            )
        }
    }
}
