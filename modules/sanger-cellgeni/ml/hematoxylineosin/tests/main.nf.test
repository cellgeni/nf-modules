
nextflow_process {

    name "Test Process ML_HEMATOXYLINEOSIN"
    script "../main.nf"
    config "./nextflow.config"
    process "ML_HEMATOXYLINEOSIN"

    tag "modules"
    tag "modules_sangercellgeni"
    tag "ml"
    tag "ml/hematoxylineosin"

  
    test("hematoxylineosin - dir") {

        when {
            process {
                """
 
                input[0] = [
                    'hematoxylineosin_test', // meta map
                    '/lustre/scratch127/cellgen/cellgeni/dn10/output_file1/hematoxylin_eosin_image_aligned'
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("hematoxylineosin - dir - stub") {

        options "-stub"

        when {
            process {
                """
                
                input[0] = [
                    'hematoxylineosin_test', // meta map
                    '/lustre/scratch127/cellgen/cellgeni/dn10/output_file1/hematoxylin_eosin_image_aligned'
                  
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
