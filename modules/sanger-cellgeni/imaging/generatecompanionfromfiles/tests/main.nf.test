// nf-core modules test imaging/generatecompanionfromfiles
nextflow_process {

    name "Test Process IMAGING_GENERATECOMPANIONFROMFILES"
    script "../main.nf"
    process "IMAGING_GENERATECOMPANIONFROMFILES"

    tag "modules"
    tag "modules_sangercellgeni"
    tag "imaging"
    tag "imaging/generatecompanionfromfiles"

    test("PE images - ome.tif") {

        when {
            params {
                module_args = ""
            }
            process {
                """
                input[0] = [
                    [ id:'PE' ], // meta map
                    file(params.modules_testdata_base_path + 'PerkinElmer/for_companion_generation/*tif', checkIfExists: true),
                    "*.ome.tif"
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("PE images - ome.tif - stub") {

        options "-stub"

        when {
            params {
                module_args = ""
            }
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    file(params.modules_testdata_base_path + 'PerkinElmer/deconvolved/Well:0:0/*tif', checkIfExists: true),
                    "*.ome.tif",
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
