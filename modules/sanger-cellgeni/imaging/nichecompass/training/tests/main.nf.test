nextflow_process {

    name "Test Process NICHECOMPASS_TRAINING"
    script "../main.nf"
    process "NICHECOMPASS_TRAINING"

    tag "modules"
    tag "modules_sanger-cellgeni"
    tag "nichecompass"
    tag "nichecompass/training"

    test("mouse - 3") {

        when {
            process {
                """
                // TODO nf-core: define inputs of the process here. Example:
                
                input[0] = [
                    [ id:'test' ], // meta map
                    file(params.modules_testdata_base_path + '*.h5ad', checkIfExists: true),
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("mouse - 3 - stub") {

        options "-stub"

        when {
            process {
                """
                // TODO nf-core: define inputs of the process here. Example:
                
                input[0] = [
                    [ id:'test', single_end:false ], // meta map
                    file(params.modules_testdata_base_path + '*.h5ad', checkIfExists: true),
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
